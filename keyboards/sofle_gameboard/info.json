    "url": "https://github.com/josefadamcik/SofleKeyboard",
    "maintainer": "Josef Adamcik <josef.adamcik@gmail.com>",
    "usb": {
        "vid": "0xFC32",
        "pid": "0x0287",
        "device_version": "0.0.1"
    },
    "matrix_pins": {
        "cols": ["GP27", "GP26", "GP22", "GP20", "GP23", "GP21"],
        "rows": ["GP5", "GP6", "GP7", "GP8", "GP9"]
    },
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "mousekey": true,
        "extrakey": true,
        "encoder": true,
        "rgblight": false,
        "rgb_matrix": false,
        "oled": false,
        "nkro": true
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [{ "pin_a": "GP29", "pin_b": "GP28", "resolution": 2 }]
    },
    "tapping": {
        "term": 100
    },
